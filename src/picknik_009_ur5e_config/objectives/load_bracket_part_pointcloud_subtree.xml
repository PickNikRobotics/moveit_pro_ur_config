<?xml version="1.0" encoding="UTF-8" ?>
<root
  BTCPP_format="4"
  main_tree_to_execute="Load Bracket Part Pointcloud Subtree"
>
  <!--//////////-->
  <BehaviorTree
    ID="Load Bracket Part Pointcloud Subtree"
    _description="Loads the bracket part CAD into a point cloud at the specified pose."
    _favorite="false"
    color="255;0;0"
    initial_pose="{initial_pose}"
    bracket_part_cloud="{bracket_part_cloud}"
  >
    <Control ID="Sequence" name="TopLevelSequence">
      <Action
        ID="LoadPointCloudFromFile"
        color="{color}"
        package_name="picknik_accessories"
        file_path="mujoco_assets/assets/bracket_sample1.stl"
        point_cloud="{bracket_part_cloud}"
        frame_id="world"
        num_sampled_points="10000"
        scale="0.001"
      />
      <Action
        ID="TransformPointCloud"
        input_cloud="{bracket_part_cloud}"
        transform_pose="{initial_pose}"
        output_cloud="{bracket_part_cloud}"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Load Bracket Part Pointcloud Subtree">
      <MetadataFields>
        <Metadata subcategory="Perception - 3D Point Cloud" />
        <Metadata runnable="false" />
      </MetadataFields>
      <output_port
        name="bracket_part_cloud"
        default="{bracket_part_cloud}"
        type="sensor_msgs::msg::PointCloud2"
      />
      <input_port name="color" default="255;0;0" />
      <input_port name="initial_pose" default="{initial_pose}" />
    </SubTree>
  </TreeNodesModel>
</root>
